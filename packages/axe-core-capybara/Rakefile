require "rake/clean"
require "bundler/gem_tasks"
require "rspec/core/rake_task"

#clean
CLOBBER.include "pkg"

RSpec::Core::RakeTask.new(:spec)

# default task
task :default => :spec

# build
Rake::Task[:build]

# bootstrap
desc "Bootstrap"
task :bootstrap do
  sh "bundle install"
end

# unit tests
desc "Tests Unit"
task :test_unit do
  sh "bundle exec rake"
end

# all tests
desc "Tests all"
task :test => [
  "test_unit",
] do
end

# format code
desc "Format code using rubocop"
task :format => [] do
  sh "bundle exec rubocop --config rubocop.yml --auto-correct --fix-layout"
end
