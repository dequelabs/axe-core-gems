require "rspec/core/rake_task"

RSpec::Core::RakeTask.new(:spec)

# default task
task :default => :spec

# unit tests
desc "Tests Unit"
task :test_unit do
  sh "bundle install && bundle exec rake"
end

# e2e tests
desc "Tests e2e"
task :test_e2e_capybara do
  sh "cd e2e/capybara && bundle install && bundle exec rspec"
end

task :test_e2e => [
       "test_e2e_capybara",
     ] do
end

# all tests
desc "Tests all"
task :test_all => [
       "test_unit",
       "test_e2e",
     ] do
end
